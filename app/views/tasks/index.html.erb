<h1>Task List</h1>
<ul>
  <% @tasks.each do |task| %>
    <li>
      <%= link_to task.title, task_path(task) %>
      <%= button_to 'Delete', task_path(task), method: :delete, data: { confirm: 'Are you sure?' }, class: 'delete-btn' %>
    </li>
  <% end %>
</ul>
<%= link_to 'New Task', new_task_path %>
